<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0"
    />
    <title>Scan Logs</title>
    <%- include('../../css/base.ejs') %> <%-
    include('../../css/scan-logs.ejs') %>
  </head>
  <body>
    <%- include('../../components/navbar.ejs') %>

    <div class="container">
      <%- include('../../components/sidebar.ejs', { currentPage:
      'scan-logs', isAdmin }) %>

      <div class="main-content">
        <div class="page-header">
          <div class="page-title">
            <h2>Scan Logs</h2>
            <p>View all QR code scanning activity</p>
          </div>
        </div>

        <div class="scan-logs-container">
          <div class="filters-section">
            <input
              type="text"
              id="searchInput"
              placeholder="Search by delegate or staff member..."
              class="search-input"
            />
            <select id="filterType" class="filter-select">
              <option value="">All Types</option>
              <option value="delegate">Delegate</option>
              <option value="startup">Startup</option>
            </select>
          </div>

          <div class="logs-table-wrapper">
            <table id="logsTable" class="logs-table">
              <thead>
                <tr>
                  <th>Timestamp</th>
                  <th>Delegate</th>
                  <th>Startup</th>
                  <th>Scanner</th>
                  <th>Type</th>
                </tr>
              </thead>
              <tbody id="logsTableBody">
                <!-- Logs will be loaded here -->
              </tbody>
            </table>
          </div>

          <div id="noLogs" class="empty-state">
            <p>No scan logs found.</p>
          </div>
        </div>
      </div>
    </div>

    <script src="/js/scan-logs.js"></script>
  </body>
</html>
