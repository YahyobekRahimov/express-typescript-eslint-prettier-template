    font-size: 0.95rem;
    font-family: inherit;
  }

  .form-group input:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: #667eea;
    box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
  }

  .form-buttons {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
  }

  .btn-submit,
  .btn-cancel {
    flex: 1;
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: 4px;
    font-size: 0.95rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s;
  }

  .btn-submit {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
  }

  .btn-submit:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
  }

  .btn-cancel {
    background: #f0f0f0;
    color: #333;
  }

  .btn-cancel:hover {
    background: #e0e0e0;
  }

  /* Drawer Styles */
  .drawer {
    position: fixed;
    right: 0;
    top: 0;
    height: 100vh;
    width: 400px;
    background: white;
    z-index: 1001;
    box-shadow: -4px 0 20px rgba(0, 0, 0, 0.15);
    transform: translateX(100%);
    transition: transform 0.3s ease;
    overflow-y: auto;
  }

  .drawer.active {
    transform: translateX(0);
  }

  .drawer-overlay {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.4);
    z-index: 999;
    display: none;
  }

  .drawer-overlay.active {
    display: block;
  }

  .drawer-content {
    padding: 2rem;
  }

  .drawer-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
  }

  .drawer-header h2 {
    margin: 0;
    color: #333;
  }

  .drawer-close {
    font-size: 2rem;
    font-weight: bold;
    color: #999;
    cursor: pointer;
    transition: color 0.3s;
  }

  .drawer-close:hover {
    color: #333;
  }

  @media (max-width: 768px) {
    .delegates-grid {
      grid-template-columns: 1fr;
    }

    .drawer {
      width: 100%;
    }

    .modal-content {
      width: 95%;
    }

    .search-input {
      max-width: 100%;
    }
  }
